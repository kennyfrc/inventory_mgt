




<div class="container-fluid">
   <div class="row">
      <div class="col-xs-6">
         <h3> New Email </h3>
      </div>
      <div class="col-xs-6" align="right">
         <br>
         <a href= "/dashboard" class="btn btn-info btn-sm">Back to Dashboard</a>
      </div>
   </div>

   <div class="row">
      <div class="col-xs-6" align="justify">
         <%= form_for([((params[:purchase_order_id]) ? (:purchase_order) : (:sales_order)), @mail_for_partner]) do |f| %>

          <div class="form-group">
            <%= f.label :email %>
            <%= f.text_field :email, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :subject %>
            <%= f.text_field :subject, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :content %>
            <%= f.text_area :content, class: 'form-control' %>
          </div>

          <p> Note: The PDF's already attached </p>
          <div class="form-group">
            <%= f.submit "Send PDF Receipt", class: "btn btn-success btn-sm" %>
          </div>

         <% end %>
      </div> 

      <div class="col-xs-2">
      </div> 

      <div class="col-xs-6">

      </div>

   </div>

</div>
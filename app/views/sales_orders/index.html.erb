<div class="container-fluid">
  <div class="row">
    <div class="col-xs-6">
      <h3> Sales Orders </h3>
    </div>
    <div class="col-xs-6">
      <div align="right">
        <br>
        <%= link_to "New Sales Order", new_sales_order_path, class: "btn btn-info btn-sm" %>
      </div>
    </div>
  </div>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Sales Order #</th>
            <th>Customer Name</th>
            <th>Total Billed to Customer (USD) </th>
          </tr>
        </thead>
      <tbody>
        <% @sales_orders.each do |so| %>
          <tr>
            <td><%= so.so_number %></td>
            <td><%= so.customer.company_name %></td>
            <td><%= "$ #{so.sales_line_items.map {|li| li.revenue }.reduce(:+).round(2)}" %> </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

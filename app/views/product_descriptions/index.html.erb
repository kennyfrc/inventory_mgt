<div class="container-fluid">
  <div class="row">
    <div class="col-xs-6">
      <h3> Stock & Inventory </h3>
    </div>
    <div class="col-xs-6">
      <div align="right">
        <br>
        <a href= "dashboard/investigate_inventory" class="btn btn-success btn-sm">Study By-SKU Inventory</a>
        <button class="btn btn-info btn-sm">Update via CSV</button>
        <button class="btn btn-info btn-sm">New Product</button>
      </div>
    </div>
  </div>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Product Name</th>
            <th>Product Category</th>
            <th>Stocks Available</th>
            <th>Average Daily Demand (Past 5 Days)</th>
            <th>Low Stock Level?</th>
          </tr>
        </thead>
      <tbody>
        <% @product_descriptions.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.product_category.category %></td>
            <td><%= @stock_level_index[product.name] %> </td>
            <td><%= @avg_sales[product.name] %></td>
            <td>
              <span class="text-danger"><%= "YES" if (@stock_level_index[product.name]) < @avg_sales[product.name] * 3 %></span>
              <span class="text-danger"><%= "CRITICAL" if (@stock_level_index[product.name] < @avg_sales[product.name] * 5) && (@stock_level_index[product.name] > @avg_sales[product.name] * 2) %></span>
              <span class="text-success"><%= "NO / OK" if (@stock_level_index[product.name]) > @avg_sales[product.name] * 4 %></span>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
